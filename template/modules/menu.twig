    function
    changeColor(colorChangedButton) {
        if (colorChangedButton == 'calculatorShow') {
            document.getElementById('calculatorShow').style.backgroundColor = 'yellow';
            document.getElementById('blackJackShow').style.backgroundColor = 'aqua';
        } else if (colorChangedButton == 'blackJackShow') {
            document.getElementById('blackJackShow').style.backgroundColor = 'yellow';
            document.getElementById('calculatorShow').style.backgroundColor = 'aqua';
        } else {
            document.getElementById('calculatorShow').style.backgroundColor = 'aqua';
            document.getElementById('blackJackShow').style.backgroundColor = 'aqua';
        }
    }

    function
    showOrHide(showthis) {
        if (showthis == 'calculator') {
            document.getElementById('bjwindows').style.display = 'none';
            document.getElementById('calculator').style.display = 'block';
        } else if (showthis == 'blackjack') {
            document.getElementById('bjwindows').style.display = 'block';
            document.getElementById('calculator').style.display = 'none';
        } else if (showthis == 'userMenu') {
            document.getElementById('userProfile').style.display = 'block';
            document.getElementById('userFriends').style.display = 'block';
            document.getElementById('userProfileSettings').style.display = 'block';
        } else if (showthis == 'noUserMenu') {
            document.getElementById('userProfile').style.display = 'none';
            document.getElementById('userFriends').style.display = 'none';
            document.getElementById('userProfileSettings').style.display = 'none';
        } else {
            document.getElementById('calculator').style.display = 'none';
            document.getElementById('bjwindows').style.display = 'none';
        }
    }

